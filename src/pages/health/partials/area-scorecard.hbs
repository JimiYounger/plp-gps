{{!-- Area Scorecard Partial --}}
<div class="card h-100 border-0 shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <h3 class="h5 mb-2" {{{getTooltipAttributes metricName}}}>
          {{metricName}}
          <i class="bi bi-info-circle-fill ms-1 small text-muted"></i>
        </h3>
        <span class="badge rounded-pill px-3 py-2" 
              style="background-color: {{color}}">
          {{status}}
        </span>
      </div>
      <div>
        <div class="grade-badge" style="background-color: {{color}}">
          {{grade}}
        </div>
        {{#if prevGrade}}
          <div class="grade-change mt-1">
            {{#if (eq changeIndicator "up")}}
              <i class="bi bi-arrow-up-circle-fill text-success"></i>
            {{else if (eq changeIndicator "down")}}
              <i class="bi bi-arrow-down-circle-fill text-danger"></i>
            {{else}}
              <i class="bi bi-dash-circle-fill text-warning"></i>
            {{/if}}
            <small class="text-muted">Last month: {{prevGrade}}</small>
          </div>
        {{/if}}
      </div>
    </div>

    <div class="border-top pt-3 mt-3">
      <p class="mb-2 text-muted">
        <i class="bi bi-lightning-charge-fill me-2"></i>
        {{message}}
      </p>
      <small class="text-muted">
        Based on {{formatNumber responses}} responses
      </small>
    </div>
  </div>
</div>
