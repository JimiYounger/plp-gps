{{!-- src/pages/login.hbs --}}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <img src="https://ucarecdn.com/ff83c4b2-1974-46d0-b551-efa9ee01be08/-/preview/1000x250/" alt="Pure Light Power" class="mb-4" style="max-width: 200px;">
      
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Welcome Back</h2>
          
          {{#if error}}
          <div class="alert alert-danger" role="alert">
            {{error}}
          </div>
          {{/if}}
          
          <a href="/auth/google" class="btn btn-light btn-lg border d-block w-100 mb-3">
            <img src="https://cdn.cdnlogo.com/logos/g/35/google-icon.svg" 
                 alt="Google Logo" 
                 style="width: 24px; margin-right: 8px;">
            Sign in with Google
          </a>
          
          <p class="text-muted small mt-3">
            Please use your @purelightpower.com email address
          </p>
        </div>
      </div>
    </div>
  </div>
</div>